<p id="notice"><%= notice %></p>



<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Price</th>
      <th>Artist</th>
      <th>Description</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= image_tag product.image_url %></td>
        <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= product.title %></td>
        <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= product.price %></td>
        <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= link_to product.artist.name, artist_path(product.artist) %></td>
        <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= truncate(product.description, length: 35) %></td>
        <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= link_to 'Show More', product %></td>


      </tr>
    <% end %>
  </tbody>
</table>

